{
  "extends": "@vue-shiki-monaco/tsconfig/base.tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["./src/assets/*"],
      "@components/*": ["./src/components/*"],
      "@hooks/*": ["./src/hooks/*"]
    }
  },
  "include": [
    "./src/**/*",
    "./lib/**/*",
    "./__test__/**/*",
    "./scripts/**/*",
    "./src/types/**/*"
  ]
}
